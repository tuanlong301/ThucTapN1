<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/lotte"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lotte"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppBanHang"
        tools:targetApi="31">
        <activity
            android:name=".user.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.CartActivity"
            android:exported="false" />

        <activity
        android:name=".user.MainMenu"
        android:exported="false" />

        <activity
            android:name=".admin.AdminMenu"
            android:exported="false" />

        <activity
            android:name=".App"
            />

        <activity
            android:name=".OfflineActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>



    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>