<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top: 2 nút hai bên + thanh category ở giữa -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nút gọi nhân viên  -->
        <LinearLayout
            android:id="@+id/btnCallStaff"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/r1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Gọi NV"
                android:textColor="#FF4444"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Nút giỏ hàng  -->
        <LinearLayout
            android:id="@+id/btnCart"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/r1"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Giỏ hàng"
                android:textColor="#FF4444"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Thanh category ở GIỮA (giữa hai nút) -->
        <HorizontalScrollView
            android:id="@+id/hsvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnCallStaff"
            android:layout_toStartOf="@id/btnCart"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:fillViewport="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Để canh giữa nội dung bên trong -->


            <!-- Container  -->
            <LinearLayout
                android:id="@+id/categoryContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:dividerPadding="0dp"
                android:layout_gravity="center">

                <!-- Item 1 -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bs1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Bestseller"
                        android:textColor="#FF4444"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Item 2 -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bs2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Khuyến mãi"
                        android:textColor="#FF4444"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Item 3 -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bs4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Cơm - Mì Ý"
                        android:textColor="#FF4444"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Item 4 -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bs3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Thức uống"
                        android:textColor="#FF4444"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>

    <!-- RecyclerView sản phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="none" />

</LinearLayout>
