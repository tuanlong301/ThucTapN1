<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp" app:cardCornerRadius="10dp" app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="10dp">

        <TextView
            android:id="@+id/tvTableName" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Bàn 1"
            android:textStyle="bold" android:textColor="#222222" android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvTableStatus" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Trạng thái: Trống"
            android:textColor="#6B7280" android:textSize="13sp" android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp" android:layout_height="40dp"
                android:layout_weight="1" android:text="Sửa"
                android:textAllCaps="false" android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp" android:layout_height="40dp"
                android:layout_weight="1" android:text="Xóa"
                android:textAllCaps="false" android:layout_marginStart="8dp"
                android:backgroundTint="#E91E63" android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
