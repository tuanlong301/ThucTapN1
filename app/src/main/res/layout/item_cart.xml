<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_cart_item"
    android:elevation="2dp">

    <!-- Ảnh -->
    <ImageView
        android:id="@+id/imgThumb"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/app_name" />

    <!-- Nội dung giữa -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiện Lợi 53K"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"/>

        <TextView
            android:id="@+id/tvSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 x Tiện Lợi 53K"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp"/>

        <!-- Cụm +/- số lượng -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="−"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_btn_qty"/>

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#374151"
                android:background="@drawable/bg_qty_box"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_btn_qty"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Giá bên phải -->
    <TextView
        android:id="@+id/tvLineTotal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end|center_vertical"
        android:text="212.000 đ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E91E63"/>
</LinearLayout>
