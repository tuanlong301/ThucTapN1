<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Bàn số và Thời gian đặt hàng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTableNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bàn số: 5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lúc: 2025-08-23 14:57"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Body: Danh sách món và Ghi chú -->
        <TextView
            android:id="@+id/tvOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Món: Pizza (2), Coke (1)"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú: Ít cay, không hành"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#9E9E9E"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Footer: Tổng tiền -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng: 500.000 đ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginTop="8dp"/>

        <!-- Nút hành động (tùy tab: pending chỉ Xác nhận, confirmed có Thanh toán và In) -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>
            <Button
                android:id="@+id/BtnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:visibility="gone"/><!-- Ẩn ở tab confirmed -->

            <Button
                android:id="@+id/btnPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thanh toán"
                android:textAllCaps="false"
                android:backgroundTint="#FF4D6D"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:layout_marginStart="8dp"/> <!-- Hiện ở tab confirmed -->

            <Button
                android:id="@+id/btnPrint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="In hóa đơn"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:layout_marginStart="8dp"/> <!-- Hiện ở tab confirmed -->
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>